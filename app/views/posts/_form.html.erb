<div class="row">
	<div class="small-12 columns section-header">
        <h4 class="avenir-header">Post a Workout</h4>
     </div>
		<%= simple_form_for @post do |f| %>
		<div class="row">
			<div class="small-12 columns">
			  <%= f.input :title %>
			</div>
		</div>
		  <%= f.input :topic %>
		  <!-- Need to insert datetime picker -->
		  <%= f.input :start, as: :string, start_date: Date.today, input_html: {class: "datepicker"}, label: "Start Date and Time" %>
		  <%= f.input :expected_duration_hr, label: "Expected Duration (Hour)" %>
		  <%= f.input :expected_duration_min, label: "Expected Duration (Min)" %>
		  <%= f.input :details %>
		  <%= f.input :cancelled %>
		  <%= f.input :estimated_difficulty %>
		  <%= f.button :submit, :class => "round tagalong-button fix-button" %>
		  <%= link_to "Back", posts_path, :class => 'button round snag-button fix-button' %>
		<% end %>
</div>

