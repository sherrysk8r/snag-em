<%= form_tag("/filter_by_time", method: "get") do %>
  <%= label_tag(:date_search, "Search for a day you'd like to workout:") %>
  <%= date_field :date_search, params[:date_search], as: :html %>
  Search for a time during which you'd like to workout...
  <%= label_tag(:time_search, "Starting at:") %>
  <%= text_field :time_search, params[:time_search], as: :html %>
  
  <%= submit_tag("Find me a workout!") %>
<% end %>

OR <%= link_to "Show me all workouts", posts_path %>
OR <%= link_to "Search by workout", 'filter_by_workout' %>

<h2>Filtered Workouts by time too</h2>
<% if @filtered_by_date_and_time.empty? %>
	<p><em>There are no current posts that match your workout search.</em></p>
<% else %>
	<% @filtered_by_date_and_time.each do |p| %>
		<div class="workout">
			<div class="row">
			<div class="small-4 columns">
				<h3><%= p.title %></h3>
			</div>
			<div class="small-4 small-offset-4 columns">
				<h3><%= p.datetime %></h3>
			</div>
			</div>
			<div class="row">
				<div class="small-12 columns">
				<p><%= p.topic %></p>
				<p><%= p.details %></p>
				<p><%= link_to "View", post_path(p) %></p>
				</div>
			</div>
		</div>
	<% end %>
<% end %>