<div class="row full-width">
	<div class="small-12 medium-4 columns my-events">
		<div class="row">
			<div class="small-12 columns section-header">
				<h4 class="avenir-header">Find a Workout</h4>
			</div>
		</div>
	</div>
	<div class="small-12 medium-8 columns">
		<div class="row">
			<div class="small-12 columns workout">
				<div class="row workout-content">
					<div class="small-12 columns">
						<div class="sorting-category">
							<img alt="Many" src="assets/many.png" /><%= link_to "View all workouts", posts_path %>
						</div>
					</div>
					<div class="small-12 columns">
