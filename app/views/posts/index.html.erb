<h2>All Upcoming Events</h2>
<% @posts.each do |p| %>
	<div class="workout">
		<div class="row">
		<div class="small-4 columns">
			<h3><%= p.title %></h3>
		</div>
		<div class="small-4 small-offset-4 columns">
			<h3><%= p.datetime %></h3>
		</div>
		</div>
		<div class="row">
			<div class="small-12 columns">
			<p><%= p.topic %></p>
			<p><%= p.details %></p>
			<p><%= link_to "View", post_path(p) %></p>
			</div>
		</div>
	</div>
<% end %>

