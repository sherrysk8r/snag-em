<div class="row">
      <div class="small-12 columns">
        <h4 class="login-header workout-title">Log-in</h4>
      </div>
    </div>

<div class="row">
  <div class="small-6 columns"> 
  <%= form_tag sessions_path do %>

  	<div class="control-group">
      <%= label_tag :email %>
      <div class="controls">
        <%= text_field_tag :email, params[:email] %>
      </div>
    </div>

  	<div class="control-group">
      <%= label_tag :password %>
      <div class="controls">
        <%= password_field_tag :password %>
      </div>
    </div>

    <div class="actions"><%= submit_tag "Log In", {class: "round button tagalong-button"} %></div>
    <p>Need an account? <%= link_to "Sign Up", signup_path %>.</p>
  <% end %>
  </div>
</div>

