<% if @pending_tagalongs.length != 0 %>
<table>
	<% @pending_tagalongs.each do |pt| %>
		<tr>
			<td><%= pt.user.proper_name.to_s %> wants to join you on <%= pt.post.title %> on <%= pt.post.datetime %>. Is that ok?</td>
			<td><% if pt.approved.nil? || pt.approved == false %> 
                <%= link_to edit_tagalong_path(id: pt.id, status: "approved") do %>
                  <%= image_tag 'checkmark_empty.png', class: 'checkmark' %>
                  <% pt.user.role = 'tagalong' %>
                <% end %>
              <% end %>
            </td>
		</tr>
	<% end %>
</table>

<% else %>
	<p>All done! No requests left to approve.</p>
<% end %>
